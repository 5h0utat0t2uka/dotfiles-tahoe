# .zshrc, p10kのコンパイル（次回起動時の高速化）
() {
  local zshrc="$ZDOTDIR/.zshrc"
  local p10k="$ZDOTDIR/.p10k.zsh"

  if [[ -f "$zshrc" && ( ! -f "$zshrc.zwc" || "$zshrc" -nt "$zshrc.zwc" ) ]]; then
    zcompile "$zshrc"
  fi
  if [[ -f "$p10k" && ( ! -f "$p10k.zwc" || "$p10k" -nt "$p10k.zwc" ) ]]; then
    zcompile "$p10k"
  fi
}
